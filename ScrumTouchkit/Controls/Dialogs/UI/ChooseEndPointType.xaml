<Dialogs:Dialog xmlns:Dialogs="clr-namespace:ScrumTouchkit.Controls.Dialogs"  x:Class="ScrumTouchkit.Controls.Dialogs.UI.ChooseEndPointType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="180" Width="400">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Rectangle x:Name="_serverrect" HorizontalAlignment="Left" Height="180" Stroke="Black" VerticalAlignment="Top" Width="200" StrokeThickness="2" Fill="#FF414141"/>
        <Rectangle x:Name="_clientrect" Fill="#FFEDEDED" HorizontalAlignment="Left" Height="180" Stroke="Black" VerticalAlignment="Top" Width="200" Margin="200,0,-100,0" StrokeThickness="2"/>
        <TextBlock x:Name="_servertext" HorizontalAlignment="Left" Margin="30,70,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" FontSize="24" Width="125" FontWeight="Bold" TextAlignment="Center" Foreground="#FFEDEDED"/>
        <TextBlock x:Name="_clienttext"  HorizontalAlignment="Left" Margin="239,70,0,0" TextWrapping="Wrap" Text="Client" VerticalAlignment="Top" FontSize="24" Width="125" FontWeight="Bold" TextAlignment="Center" Foreground="#FF414141"/>

    </Grid>
</Dialogs:Dialog>
