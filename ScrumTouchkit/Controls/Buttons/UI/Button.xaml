<Abstract:StandardSurfaceObject xmlns:Abstract="clr-namespace:ScrumTouchkit.Controls.Abstract"            
             x:Class="ScrumTouchkit.Controls.Buttons.UI.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="80" Height="80" Background="#00000000">
    <Grid>
        <Ellipse x:Name="_circle" Fill="#FFEDECEC" HorizontalAlignment="Stretch" Stroke="Black" VerticalAlignment="Stretch">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" Direction="0" ShadowDepth="0"/>
            </Ellipse.Effect>
        </Ellipse>
        <Viewbox x:Name="_viewbox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15,16">

        </Viewbox>

    </Grid>
</Abstract:StandardSurfaceObject>
